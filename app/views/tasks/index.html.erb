<h1> Tasks list </h1>

<% if @tasks.any? %>
  <ul>
    <% @tasks.each do |task| %>

      <li><%= link_to task.title, show_path(task) %></li>

      <i class="fa-solid fa-trash-can"><%= link_to 'Delete', delete_task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></i>
    <% end %>
  </ul>

<% else %>
  <p>Aucune tâche n'a été trouvée.</p>
<% end %>

<%= link_to 'New task', new_task_path %>
