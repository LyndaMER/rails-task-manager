<h2> My Task </h2>

<h2>Title :<%= @task.title %></h2>
<p>Details : <%= @task.details %></p>
<p>Completes : <%= @task.completed %></p>

<%= link_to 'Tasks list', tasks_path %>
<%= link_to 'Edit task', edit_task_path(@task) %>
<%= link_to 'Delete', delete_task_path(@task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
